<% include ./partials/header %>



<div class='ui main text content container'>
  <div class='ui huge header'>狼窝</div>
    <div class='ui top attached segment'>
        <div class='ui divided items'>
            <% blogs.forEach(function(blog){ %>
                <div class='item'>
                    <div class='image'>
                        <img src='<%= blog.image %>'>
                    </div>
                    <div class='content'>
                        <a class='header'>
                            <%=blog.title%>
                        </a>
                        <div class='meta'>
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class='description'>
                            <p><%= blog.body%>...</p>

                        </div>
                        <div class='extras'>
                            <a href= "blogs/<%= blog._id %>" class='ui floated basic black button'>
                                Read More
                                <i class='right chevron icon'></i>
                            </a>
                        </div>
                    </div>
                </div>
              <% }) %>
        </div>
    </div>
</div>









<% include ./partials/footer %>
